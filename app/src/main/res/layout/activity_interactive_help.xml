<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="8pt"
                  android:paddingRight="8pt"
                  android:paddingTop="8pt">
        <TextView
                android:text="@string/interactive_help_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                android:textSize="18sp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">
            <TextView
                    android:text="@string/interactive_help_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_header"
                    android:textSize="18dp"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="3pt"
                    android:entries="@array/spinner_array"/>
                    <!--  android:background="@drawable/spinner_border" -->
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/help_message"
                android:hint="@string/interactive_help_hint"
                android:minLines="6"
                android:maxLines="8"
                android:background="@drawable/border"
                android:gravity="top|left"
                android:layout_marginTop="8pt"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8pt"
            android:paddingLeft="8pt"
            android:paddingRight="8pt">
        <Button
                android:text="@string/general_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
        <Button
                android:text="@string/send_general_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/send"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>